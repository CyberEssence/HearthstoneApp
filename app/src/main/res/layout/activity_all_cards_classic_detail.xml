<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.allcards.AllCardsClassicDetail">

        <TextView
            android:id="@+id/nameOfClassicCardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_of_card_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameOfClassicCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-1dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/nameOfClassicCardText"
            android:text=""
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>
</layout>